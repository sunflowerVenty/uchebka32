<Page x:Class="uchebka32.Pages.MySponsor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MySponsor">

    <Grid Background="{StaticResource BgColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1"
                 Grid.Column="1">
            <StackPanel VerticalAlignment="Top" Height="765" Width="1155">
                <TextBlock Text="Мои спонсоры" 
                           VerticalAlignment="Top"
                           FontWeight="Medium" 
                           Style="{StaticResource TextHeader}" 
                           Margin="0, 40, 0, 10"/>
                <TextBlock Text="Здесь показаны все ваши спонсоры в Marathon Skills 2016" 
                           Margin="0,5,0,15"
                           HorizontalAlignment="Center"/>

            </StackPanel>


        </Viewbox>

        <TextBlock Grid.Row="3" TextWrapping="Wrap" Margin="0,0,0,15">
            <Run Text="Это было бы длинным описанием благотворительности. Это могло пойти для нескольких параграфов."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="Это - больше описания здесь, и это - еще часть описания также."/>
        </TextBlock>

        <Separator Grid.Row="4" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" x:Name="TotalAmountText" Text="Всего $0" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/>

        <Border Grid.Row="1" 
                Grid.Column="1"
                BorderThickness="0,1,0,1" 
                Margin="20" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип (если есть) -->
                <StackPanel Grid.Column="0" Background="Gray">
                    <Image Source="{Binding CurrentCharity.LogoImage}" 
                       Width="50" Height="50" Margin="0,0,10,0"/>
                </StackPanel>
                

                <!-- Название и описание -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding CurrentCharity.Name}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding CurrentCharity.Description}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Заголовок списка спонсоров -->
        <TextBlock Grid.Row="3" Text="Список спонсоров:" Margin="20,10,20,5" FontWeight="Bold"/>

        <!-- Список спонсоров -->
        <ScrollViewer Grid.Row="4" Margin="20,0,20,10">
            <ItemsControl ItemsSource="{Binding Sponsors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding SponsorName}" FontWeight="Bold" Width="300"/>
                            <TextBlock Text="{Binding Amount, StringFormat='{}{0:C}'}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Итоговая сумма -->
        <Border Grid.Row="5" Background="#FFEEEEEE" Padding="10">
            <TextBlock Text="{Binding TotalAmount, StringFormat='Всего {0:C}'}" 
                       HorizontalAlignment="Right" FontWeight="Bold"/>
        </Border>
    </Grid>
</Page>
