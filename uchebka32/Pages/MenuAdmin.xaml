<Page x:Class="uchebka32.Pages.MenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MenuKoor">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="2"
                Grid.Row="1"
                VerticalAlignment="Top">
            <TextBlock Text="Меню администратора" 
                   FontWeight="Medium" 
                   Style="{StaticResource TextHeader}" 
                   Margin="40"/>
            <StackPanel Grid.Row="1" Grid.Column="2" 
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <StackPanel VerticalAlignment="Top"
                        Margin="30, 0"
                        Width="600">
                    <Button Content="Пользователи"
                            Height="120"
                            Margin="0, 20"/>
                    <Button Content="Благотворительные организации"
                            Height="120"
                            Margin="0, 20"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top"
                Margin="30, 0"
                Width="600">
                    <Button Content="Волонтеры"
                            Height="120"
                            Margin="0, 20"/>
                    <Button Content="Инвентарь"
                            Height="120"
                            Margin="0, 20"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
