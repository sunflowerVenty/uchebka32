<Page x:Class="uchebka32.Pages.AddEditCharity"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AddEditCharity">

    <Grid Background="{StaticResource White}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1"
                 Grid.Column="1">
            <TextBlock TextWrapping="Wrap" 
                       FontWeight="Medium" 
                       TextAlignment="Center"
                       Style="{StaticResource TextHeader}" 
                       Margin="10">
                Добавление/Редактирование <LineBreak></LineBreak>
                благотворительных организаций
            </TextBlock>
        </Viewbox>
        <!-- Наименование -->
        <Viewbox Grid.Row="2"
                 Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Grid.Column="0"
                            Margin="20, 0">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock Text="Наименование:" Margin="0,0,0,5"/>
                        <TextBox Margin="0,10,0,20" 
                                 x:Name="NameTextBox"
                                 Text="{Binding CharityName, UpdateSourceTrigger=PropertyChanged}" Height="31" Width="255"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock Grid.Row="1" 
                                   Text="Описание:"
                                   Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" 
                                 Margin="0,10,0,20" 
                                 x:Name="DescriptionTextBox" 
                                 Text="{Binding CharityDescription, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 Height="149" 
                                 VerticalScrollBarVisibility="Auto" Width="327"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Grid.Column="1">
                    <TextBlock Grid.Row="2" 
                               TextWrapping="Wrap"
                               Text="Оставьте поле ''Логотип файл'' пустым если вы не хотите загружать логотип" 
                               Margin="0,0,0,10" 
                               FontStyle="Italic" 
                               Foreground="Gray"
                               HorizontalAlignment="Right"
                               Width="238"/>


                    <StackPanel Grid.Row="2" 
                                Orientation="Vertical">
                        <TextBlock Grid.Row="2" 
                                   Text="Логотип файл:" />
                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <TextBox x:Name="LogoPathTextBox" 
                                     Width="207" 
                                     Height="26"
                                     Margin="0, 10"
                                     IsReadOnly="True"
                                     Text="{Binding CharityLogo, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Content="Просмотр..." 
                                Margin="10,0,0,0"
                                Width="90"
                                FontSize="12"
                                Click="BrowseLogo_Click" Height="26"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Left" Margin="0, 10">
                        <TextBlock Text="Текущий логотип:" Margin="0,0,0,5"/>
                        <Image x:Name="CurrentLogoImage" 
                               Height="150" 
                               Stretch="Uniform"
                               Source="{Binding CurrentLogoPath}"/>
                    </StackPanel>
                </StackPanel>


                <Viewbox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         HorizontalAlignment="Center"
                         Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Сохранить" 
                                Width="120" 
                                Height="30" 
                                FontSize="15"
                                Margin="0,0,10,0" 
                                Click="Save_Click"/>
                        <Button Content="Отмена" 
                                Width="120"
                                FontSize="15"
                                Height="30" 
                                Click="Cancel_Click"/>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Viewbox>

        
    </Grid>
</Page>
