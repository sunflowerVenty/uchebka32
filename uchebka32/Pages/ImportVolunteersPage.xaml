<Page x:Class="uchebka32.Pages.ImportVolunteersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ImportVolunteersPage">

    <Grid Background="{StaticResource BgColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1"
                   Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Загрузка волонтеров"
                           VerticalAlignment="Top"
                           FontWeight="Medium" 
                           FontSize="30"
                           Style="{StaticResource TextHeader}" 
                           Margin="20"/>

                <!-- Основной контент -->
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Выбор файла -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="CSV файл волонтеров:" 
                                   FontSize="17"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <TextBox x:Name="txtFilePath" 
                                 Grid.Column="1"
                                 IsReadOnly="True"
                                 Margin="10"
                                 Height="40"
                                 Width="300"/>

                        <Button x:Name="btnBrowse" 
                                Height="40" 
                                Width="200" 
                                FontSize="18" 
                                Margin="10"
                                Grid.Column="2"
                                Content="Просмотр..."
                                Click="btnBrowse_Click" />
                    </Grid>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,0,0,0">
                        <Button x:Name="btnImport" 
                                Content="Загрузка"
                                VerticalAlignment="Top"
                                Height="40" 
                                Width="165" 
                                FontSize="18" 
                                Margin="10"
                                Click="btnImport_Click"/>

                        <Button x:Name="btnCancel" 
                                Content="Отмена"
                                VerticalAlignment="Top"
                                Height="40" 
                                Width="146" 
                                FontSize="18" 
                                Margin="10"
                                Click="btnCancel_Click"/>
                    </StackPanel>

                    <Grid Grid.Row="2"
                          Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="CSV файл должен иметь следующие поля:"
                         FontWeight="Medium"
                         Margin="0,0,0,10" TextAlignment="Left"/>

                            <TextBlock Text="VolunteerId: Уникальный идентификатор волонтера"
                                       Margin="20,0,0,5" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="FirstName: Имя волонтера"
                                       Margin="20,0,0,5" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="LastName: Фамилия волонтера"
                                       Margin="20,0,0,5" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="CountryCode: Код страны"
                                       Margin="20,0,0,5" 
                                       TextAlignment="Left"/>
                            <TextBlock Text="Gender: Пол"
                                       Margin="20,0,0,5"
                                       TextAlignment="Left"/>
                        </StackPanel>

                        <ScrollViewer Grid.Column="1"
                                      MaxHeight="200"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txtImportLog"
                         TextWrapping="Wrap"
                         Margin="0,10"/>
                        </ScrollViewer>
                    </Grid>

                </Grid>
            </StackPanel>
        </Viewbox>


    </Grid>
</Page>
