<Page x:Class="uchebka32.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid Background="Black">
            <StackPanel>
                <TextBlock Text="MARATHON SKILLS 2016" FontSize="48" FontWeight="Bold" Style="{StaticResource TextHeader}" Margin="10"/>
                <TextBlock Text="Москва, Россия" FontSize="28" Style="{StaticResource TextHeader}" Foreground="Gray"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch">
            <Button Content="Я хочу стать бегуном"/>
            <Button Content="Я хочу стать спонсором бегуна"/>
            <Button Content="Я хочу узнать больше о событии"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="Login" Height="50" Width="140" FontSize="24"/>
        </StackPanel>
    </Grid>
</Page>
