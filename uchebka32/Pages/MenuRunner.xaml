<Page x:Class="uchebka32.Pages.MenuRunner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MenuRunner">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация на марафон" 
                   Grid.Column="2"
                   Grid.Row="1"
                   VerticalAlignment="Top"
                   FontWeight="Medium" 
                   Style="{StaticResource TextPage}" 
                   Margin="40"/>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
            <StackPanel VerticalAlignment="Top"
                        Margin="30, 0"
                        Width="600">
                <Button Content="Регистрация на марафон"
                        Height="120"
                        FontSize="35"/>
                <Button Content="Редактирование профиля"
                        Height="120"
                        FontSize="35"/>
                <Button Content="Контакты"
                        Height="120"
                        FontSize="35"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top"
                        Margin="30, 0"
                        Width="600">
                <Button Content="Мои результаты"
                        Height="120"
                        FontSize="35"/>
                <Button Content="Мой спонсор"
                        Height="120"
                        FontSize="35"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
