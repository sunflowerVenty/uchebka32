<Page x:Class="uchebka32.Pages.Maps"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegSpons">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch">
                <Grid Margin="50, 30" 
                  MaxHeight="760" 
                  MaxWidth="798" 
                  MinHeight="428" 
                  MinWidth="449">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Image Source="/Images/Maps/marshrut.png" 
                       Grid.RowSpan="8" Grid.ColumnSpan="6"
                       Stretch="Uniform" 
                       MaxHeight="755" MaxWidth="850"/>

                    <Button Style="{StaticResource BtnMaps}"
                            Name="Check1"
                            Click="Check1_Click"
                            Grid.Row="0" Grid.Column="3" 
                            HorizontalAlignment="Center" VerticalAlignment="Top" 
                            MaxHeight="75" MaxWidth="72">
                        <Image Source="/Images/Maps/marsh1.png"/>
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                            Name="Start1"
                            Click="Start1_Click"
                            Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="1"
                            HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Image Source="/Images/Maps/icon-start.png"/>
                    </Button>
                    
                    <Button Style="{StaticResource BtnMaps}" 
                           Name="Check7"
                           Click="Check7_Click"
                           Grid.Row="5" Grid.Column="0" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh7.png"/>
                    </Button>
                    
                    <Button Style="{StaticResource BtnMaps}"
                           Name="Check6"
                           Click="Check6_Click"
                           Grid.Row="6" Grid.Column="1" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           MaxHeight="75" MaxWidth="72">
                        <Image Source="/Images/Maps/marsh6.png" />
                    </Button>
                    
                    <Button Style="{StaticResource BtnMaps}"
                            Click="Check5_Click"
                           Name="Check5"
                           Grid.Row="7" Grid.Column="3" 
                           HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh5.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                            Click="Start2_Click"
                           Name="Start2"
                           Grid.Row="7" Grid.Column="4"
                           HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Image Source="/Images/Maps/icon-start.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                            Click="Check4_Click"
                           Name="Check4"
                           Grid.Row="6" Grid.Column="5" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh4.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                            Click="Check3_Click"
                           Name="Check3"
                           Grid.Row="4" Grid.Column="4" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh3.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                           Name="Check2"
                            Click="Check2_Click"
                           Grid.Row="2" Grid.Column="4" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh2.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                           Name="Check8"
                            Click="Check8_Click"
                           Grid.Row="2" Grid.Column="0" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           MaxHeight="75" MaxWidth="72" >
                        <Image Source="/Images/Maps/marsh8.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                           Name="Start3"
                            Click="Start3_Click"
                           Grid.Row="3" Grid.Column="0"
                           HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Image Source="/Images/Maps/icon-start.png" />
                    </Button>

                    <Button Style="{StaticResource BtnMaps}"
                           Name="Finish"
                            Click="Finish_Click"
                           Grid.Row="0" Grid.Column="1" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           MaxHeight="100">
                        <Image Source="/Images/Maps/marshFinish.png" />
                    </Button>
                </Grid>

                <Grid Background="{StaticResource BgPanelColor}" 
                      MaxWidth="450"
                      Name="InfoGrid"
                      Margin="100, 30, 0, 0"
                      VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="30" MaxWidth="50"/>
                        <ColumnDefinition Width="310"/>
                        <ColumnDefinition MinWidth="30" MaxWidth="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="20" MaxHeight="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="*" MinHeight="300"/> 
                        <RowDefinition MinHeight="30" MaxHeight="50"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Column="2" 
                            Name="KrestBtn"
                            Click="KrestBtn_Click"
                            Style="{StaticResource BtnMaps}"
                            Margin="5">
                        <Image Source="/Images/cross-icon.png"/>
                    </Button>
                    
                    <TextBlock x:Name="NameText"
                           Grid.Column="1"
                           Grid.Row="1"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           FontWeight="Bold" 
                           Style="{StaticResource TextHeader}" 
                           Foreground="Black"
                           FontSize="30"/>

                    <TextBlock FontSize="25" 
                               Grid.Column="1"
                               Grid.Row="2"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Margin="0, 20"
                               Name="StartText"
                               TextWrapping="Wrap"
                               Style="{StaticResource TextPage}"/>
                    <StackPanel Grid.Column="1"
                                Grid.Row="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0, 20">
                        <TextBlock FontSize="28" 
                                   Text="Landmark:"
                                   Name="Landmark"
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource TextPage}"/>
                        <TextBlock FontSize="25" 
                                   Name="LandmarkText"
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource TextPage}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Grid.Row="3"
                                MaxWidth="500"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left">
                        <TextBlock FontSize="25" 
                                   Grid.Column="1"
                                   Text="Services Provided:"
                                   Name="ServicesPr"
                                   FontWeight="Bold" 
                                   Grid.Row="3"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource TextPage}"/>

                        <StackPanel HorizontalAlignment="Left"
                                    x:Name="PanelServises">
                            
                        </StackPanel>
                    </StackPanel>
                    
                    
                </Grid>
            </StackPanel>
        </Viewbox>
        
    </Grid>
</Page>
