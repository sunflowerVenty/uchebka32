<Page x:Class="uchebka32.Pages.Maps"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegSpons">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                    VerticalAlignment="Top" 
                    Orientation="Horizontal"
                    Margin="220, 50">
            <Image Source="/Images/marshrut.png" Height="800"/>

            <StackPanel>
                <TextBlock Text="Checkpoint 1" 
                           FontWeight="Medium" 
                           Style="{StaticResource TextHeader}" 
                           Foreground="Black"
                           FontSize="35"
                           Margin="10"/>
                <TextBlock FontSize="35" 
                           Text="Особенности:"
                       TextWrapping="Wrap"
                       Style="{StaticResource TextPage}" 
                       Margin="100, 40"/>
                <TextBlock FontSize="35" 
                       TextWrapping="Wrap"
                       Style="{StaticResource TextPage}" 
                       Margin="100, 40">
                        Стенд питья<LineBreak/>
                       - Энергетические батончики<LineBreak/>
                       - Туалет<LineBreak/>
                       - Медицинский пункт
                </TextBlock>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
