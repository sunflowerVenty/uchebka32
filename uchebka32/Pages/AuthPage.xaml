<Page x:Class="uchebka32.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
  Title="AuthPage">

    <Grid Background="{StaticResource BgColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" 
                    Grid.Column="1" 
                    Grid.ColumnSpan="3" 
                    VerticalAlignment="Top">
            <StackPanel Grid.Row="1" 
                        Grid.ColumnSpan="2" 
                        Margin="220, 50">
                <TextBlock Text="Форма авторизации" FontWeight="Medium" Style="{StaticResource TextHeader}" Margin="10"/>
                <TextBlock Text="Пожалуйста, авторизуйтесь в системе, используя ваш адрес электронной почты и пароль." 
                           FontSize="35" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Style="{StaticResource TextPage}" 
                           Margin="70, 0"/>
            </StackPanel>
            <StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock Text="Email:" 
                               FontSize="35" 
                               Style="{StaticResource TextPage}" 
                               Margin="50, 0"/> 
                    <TextBox Name="EmailBox" Text="Enter your email address"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock Text="Password:" 
                               FontSize="35" 
                               Style="{StaticResource TextPage}" 
                               Margin="50, 0"/>
                    <TextBox Name="PassBox" Text="Enter your password"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="3" 
                        Grid.Row="1" 
                        Orientation="Horizontal">
                <Button Content="Login" 
                        Name="LoginBtn"
                        Height="50" 
                        Width="140" 
                        FontSize="24" 
                        Margin="20" Click="LoginBtn_Click"/>
                <Button Content="Cancel" 
                        Name="CancelBtn"
                        Height="50" 
                        Width="140" 
                        FontSize="24" 
                        Margin="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
