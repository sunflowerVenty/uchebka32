<Page x:Class="uchebka32.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AuthPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Top">
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="220, 50">
                <TextBlock Text="Регистрация бегуна" FontWeight="Medium" Style="{StaticResource TextPage}" Margin="10"/>
                <TextBlock Text="Пожалуйста, заполните всю информацию, чтобы зарегистрироваться в качестве бегуна" 
                       FontSize="35" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Style="{StaticResource TextPage}" 
                       Margin="70, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0" HorizontalAlignment="Left">
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Email:" FontSize="35" 
           Style="{StaticResource TextPage}" 
           Margin="10, 0"/>
                    <TextBox Text="Email" Width="400" Margin="10, 0"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Пароль:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                    <TextBox Text="Пароль" Width="400" Margin="10, 0"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Повторите пароль:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                    <TextBox Text="Повторите пароль" Width="400" Margin="10, 0"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Имя:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                    <TextBox Text="Имя" Width="400" Margin="10, 0"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Фамилия:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                    <TextBox Text="Фамилия" Width="400" Margin="10, 0"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                    <TextBlock Text="Пол:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                    <ComboBox Text="Выберите пол" Background="White" Width="400" Height="60" Margin="10, 0"/>
                </StackPanel>


            </StackPanel>
                <StackPanel Margin="0" HorizontalAlignment="Left">
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Email:" FontSize="35" 
           Style="{StaticResource TextPage}" 
           Margin="10, 0"/>
                        <TextBox Text="Email" Width="400" Margin="10, 0"></TextBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Пароль:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                        <TextBox Text="Пароль" Width="400" Margin="10, 0"></TextBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Повторите пароль:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                        <TextBox Text="Повторите пароль" Width="400" Margin="10, 0"></TextBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Имя:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                        <TextBox Text="Имя" Width="400" Margin="10, 0"></TextBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Фамилия:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                        <TextBox Text="Фамилия" Width="400" Margin="10, 0"></TextBox>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Height="100" Orientation="Horizontal">
                        <TextBlock Text="Пол:" FontSize="35" 
Style="{StaticResource TextPage}" 
Margin="10, 0"/>
                        <ComboBox Text="Выберите пол" Background="White" Width="400" Height="60" Margin="10, 0"/>
                    </StackPanel>


                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
                <Button Content="Login" Height="50" Width="140" FontSize="24" Margin="20"/>
                <Button Content="Cancel" Height="50" Width="140" FontSize="24" Margin="20"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
