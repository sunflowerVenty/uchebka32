<Page x:Class="uchebka32.Pages.RegSpons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegSpons">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Top" Margin="220, 50">
            <TextBlock Text="Спонсор бегуна" 
                           FontWeight="Medium" 
                           Style="{StaticResource TextHeader}" 
                           Margin="10"/>
            <TextBlock Text="Пожалуйста выберите бегуна, которого вы отели бы спонсировать и сумму, которую вы хотели бы спонсировать. Спасибо за вашу поддержку бегунов и их благотворительных учреждений."                   
                       FontSize="35" 
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Style="{StaticResource TextPage}" 
                       Margin="70, 0"/>
        </StackPanel>

        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,330,0,0" VerticalAlignment="Top">
            <TextBlock Text="Информация о Спонсоре"                      FontWeight="Medium" 
                       FontSize="35"
                       Style="{StaticResource TextPage}" 
                       Margin="20"/>
            <Grid Height="500" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ваше имя:" FontSize="35"
                                       HorizontalAlignment="Right"
                                       Style="{StaticResource TextPage}" 
                                       Margin="10, 0"/>
                <TextBlock Text="Бегун:" FontSize="35" 
                                       HorizontalAlignment="Right"
                                   Grid.Row="1"
                                    Style="{StaticResource TextPage}" 
                                    Margin="10, 0"/>
                <TextBlock Text="Карта:" FontSize="35" 
                                       HorizontalAlignment="Right"
                                   Grid.Row="2"
                                    Style="{StaticResource TextPage}" 
                                    Margin="10, 0"/>
                <TextBlock Text="Номер карты#:" FontSize="35" 
                                       HorizontalAlignment="Right"
                                   Grid.Row="3"
                                    Style="{StaticResource TextPage}" 
                                    Margin="10, 0"/>
                <TextBlock Text="Срок действия:" FontSize="35" 
                                       HorizontalAlignment="Right"
                                   Grid.Row="4"
                                   Style="{StaticResource TextPage}" 
                                   Margin="10, 0"/>
                <TextBlock Text="CVC:" FontSize="35" 
                                       HorizontalAlignment="Right"
                                   Grid.Row="5"
                                   Style="{StaticResource TextPage}" 
                                   Margin="10, 0"/>
                <TextBox Text="Ваше имя"
                                 Grid.Column="1"
                                 Grid.Row="0"
                                 Width="400" 
                                 Margin="10, 0"></TextBox>
                <ComboBox Text="Иван Прудов- 204 (Russia)" 
                                 Grid.Column="1"
                                 Grid.Row="1"
                                  Width="400" 
                                  Margin="10, 0"></ComboBox>
                <TextBox Text="Владелец карты" 
                                 Grid.Column="1"
                                 Grid.Row="2"
                                 Width="400" 
                                 Margin="10, 0"></TextBox>
                <TextBox Text="1234 1234 1234 1234" 
                                 Grid.Column="1"
                                 Grid.Row="3"
                                 Width="400" 
                                 Margin="10, 0"></TextBox>
                <StackPanel Grid.Column="1"
                                    Grid.Row="4"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                    <TextBox Text="01" 
                                 Grid.Column="1"
                                 Grid.Row="4"
                                 Width="70" 
                                 Margin="10, 0"></TextBox>
                    <TextBox Text="2017" 
                                 Grid.Column="1"
                                 Grid.Row="4"
                                 Width="100" 
                                 Margin="10, 0"></TextBox>
                </StackPanel>

                <TextBox Text="123"
                                 Grid.Column="1"
                                 Grid.Row="5" 
                                 Width="100" 
                                 Margin="10, 0"
                                 HorizontalAlignment="Left"></TextBox>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,330,0,0">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Благотворительность"                      FontWeight="Medium" 
                           FontSize="35"
                           Style="{StaticResource TextPage}" 
                           Margin="20"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Фонд Кошек"
                           FontSize="30"
                           Style="{StaticResource TextPage}" 
                           Margin="30, 0"/>
                    <Image Source="/Images/Info.png"
                           Grid.Column="2"
                           Width="50"
                           Height="50"/>
                </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Сумма пожертвования"                      FontWeight="Medium" 
                           FontSize="35"
                           Style="{StaticResource TextPage}" 
                           Margin="20"/>
                <TextBlock Text="$0"
                               FontSize="100"
                               Style="{StaticResource TextPage}" 
                               Margin="30, 0"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="––"
                            Height="50" 
                            Width="50" 
                            FontWeight="Bold"
                            FontSize="18" 
                            Margin="20"/>
                    <TextBox Text="0"
                             HorizontalContentAlignment="Center"
                             Width="130"
                             Height="45"
                             Margin="10, 0"></TextBox>
                    <Button Content="+"
                            Height="50" 
                            Width="50" 
                            FontWeight="Bold"
                            FontSize="25" 
                            Margin="20"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" 
                            Margin="0, 50"
                            Orientation="Horizontal">
                    <Button Content="Регистрация" 
            Height="50" 
            Width="200" 
            FontSize="28" 
            Margin="20"/>

                    <Button Content="Отмена" 
            Height="50" 
            Width="140" 
            FontSize="28" 
            Margin="20"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 
