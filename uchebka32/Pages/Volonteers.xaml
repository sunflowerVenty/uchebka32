<Page x:Class="uchebka32.Pages.Volonteers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebka32.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="EditCharity">


    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Column="0" 
                  Grid.Row="1"
                  Grid.ColumnSpan="3"
                  VerticalAlignment="Top" 
                  VerticalScrollBarVisibility="Visible">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.15*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" 
                     Grid.Column="1"
             HorizontalAlignment="Stretch">
                    <StackPanel>
                        <TextBlock Text="Управление волонтерами" 
                                   FontSize="45" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Stretch">
                            <StackPanel>
                                <TextBlock Text="Сортировка и фильтрация" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,20"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Сортировать по: " 
                                               FontSize="27" 
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Center"
                                               Margin="10, 0"/>
                                    <StackPanel>
                                        <ComboBox Width="237"
                                                  Height="37"
                                                  Margin="0,0,10,0" 
                                                  SelectedIndex="0"
                                                  FontSize="22">
                                            <ComboBoxItem>Фамилии</ComboBoxItem>
                                            <ComboBoxItem>Имени</ComboBoxItem>
                                            <ComboBoxItem>Стране</ComboBoxItem>
                                            <ComboBoxItem>Полу</ComboBoxItem>
                                        </ComboBox>
                                        <Button Content="Обновить"
                                                Margin="0, 20"
                                                HorizontalAlignment="Left"
                                                Width="173" 
                                                Height="49"
                                                FontSize="20"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Margin="500, 0, 0, 0">
                                <TextBlock Text="Загрузка" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,20"/>
                                <Button Content="Загрузка волонтеров"
                                        Margin="0, 20"
                                        HorizontalAlignment="Left"
                                        Width="283" 
                                        Height="49"
                                        FontSize="20"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Grid.Row="3"
                                       Text="Всего волонтеров:" 
                                       FontWeight="Bold"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3"
                                       Text="123" 
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       Margin="10,0"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Viewbox>

                <Viewbox Grid.Row="2" 
                     Grid.Column="1"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Center">
                    <DataGrid x:Name="CompaniesDataGrid" 
                          Margin="0, 10, 0, 0"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Логотип" Width="350">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding LogoPath}" Width="300" Stretch="Uniform"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Наименование" 
                                            Binding="{Binding CharityName}"
                                            Width="250"
                                            FontSize="20">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Описание"
                                            Binding="{Binding CharityDescription}" 
                                            Width="800" 
                                            FontSize="20">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" 
                                            Margin="10"
                                            Height="55"
                                            Click="EditButton_Click" 
                                            Tag="{Binding}"
                                            Padding="5,2" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Viewbox>
            </Grid>
        </ScrollViewer>


    </Grid>
</Page>
