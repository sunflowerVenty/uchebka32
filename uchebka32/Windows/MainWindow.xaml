<Window x:Class="uchebka32.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uchebka32.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid Background="Black">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20, 0" Orientation="Horizontal">
                <Button Content="Назад" Width="140"/>
                <TextBlock Text="MARATHON SKILLS 2016" Margin="40, 0" FontSize="24" FontWeight="Bold" Style="{StaticResource TextHeader}"/>
            </StackPanel>
        </Grid>
        
        

        <Grid Grid.Row="2" Background="Black">
            <StackPanel>
                <TextBlock Text="18 часов" FontSize="20" Style="{StaticResource TextHeader}"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
    
</Window>
